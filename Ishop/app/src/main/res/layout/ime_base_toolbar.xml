<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.localworld.ishop.common.image.ISImageView
        android:id="@+id/iv_toolbar_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="7.5dp"
        app:failureImageScaleType="fitCenter"
        app:placeholderImage="@drawable/ipole_icon_default_user_avatar"
        app:placeholderImageScaleType="fitCenter"
        app:roundAsCircle="true" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_toolbar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7.5dp"
        android:layout_toRightOf="@id/iv_toolbar_head"
        app:srcCompat="@drawable/icon_vector_ipole_txt_logo" />

    <ImageView
        android:id="@+id/iv_toolbar_shoppingcart"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_home_cart" />

</RelativeLayout>