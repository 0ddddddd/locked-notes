<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_setting_changepwdbacktomian"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:src="@drawable/ipole_icon_main_back_btn"
                android:layout_gravity="center"
                android:layout_marginLeft="19dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更改密码"
                android:textColor="#000"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="40dp"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="@color/colorLightGray"
            android:layout_marginLeft="38dp"/>
        <EditText
            android:id="@+id/edit_setting_setting_changepwd_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="原密码"
            android:textColorHint="@color/colorLightGray"
            android:textSize="14sp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="@color/colorLightGray"
            android:layout_marginLeft="38dp"/>
        <EditText
            android:id="@+id/edit_setting_setting_changepwd_newpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新密码"
            android:textColorHint="@color/colorLightGray"
            android:textSize="14sp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="@color/colorLightGray"
            android:layout_marginLeft="38dp"/>
        <EditText
            android:id="@+id/edit_setting_setting_changepwd_confirmpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认新密码"
            android:textColorHint="@color/colorLightGray"
            android:textSize="14sp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <TextView
        android:id="@+id/tv_setting_setting_changepwd_confirmmodify"
        android:layout_width="143dp"
        android:layout_height="31dp"
        android:text="确认修改"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/setting_btn_round_red_shape"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_gravity="center"/>
</LinearLayout>