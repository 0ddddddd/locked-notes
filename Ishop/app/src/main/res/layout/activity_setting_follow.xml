<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_setting_followed_back"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:src="@drawable/ipole_icon_main_back_btn"
            android:layout_marginLeft="19dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="已关注"
            android:textColor="#000"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_setting_follow_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_setting_follow_userline"
                android:layout_width="162dp"
                android:layout_height="1dp"
                android:background="#808080"
                android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_setting_follow_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="话题标签"
                android:textSize="14sp"
                android:textColor="#808080"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_setting_follow_topicline"
                android:layout_width="162dp"
                android:layout_height="1dp"
                android:background="#808080"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
    <com.localworld.ishop.common.view.ScrollControllerViewPager
        android:id="@+id/vp_setting_follow_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.localworld.ishop.common.view.ScrollControllerViewPager>
</LinearLayout>
