<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="133dp"
    android:layout_height="167dp"

    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/user_recommend_item">

    <com.localworld.ishop.common.image.ISImageView
        android:id="@+id/iv_shopuser_recommend"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:roundAsCircle="true"/>

    <ImageView
        android:id="@+id/btn_shop_user_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/colorGray"/>

    <TextView
        android:id="@+id/recommend_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Beethoven"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="114dp"
        android:layout_height="23dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="关注"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/shop_follow"/>
</RelativeLayout>