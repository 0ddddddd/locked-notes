<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:orientation="vertical"
        android:background="@drawable/shape_shopuser_follow_button3">

            <com.localworld.ishop.common.view.ScrollControllerViewPager
                android:id="@+id/vp_new_goods"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/lll_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="￥10000000"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TTTTTTTTT"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="AAAAAAAA"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#979797"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_goods_btn1"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="BBBBBBBB"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#979797"
                android:background="@drawable/shape_goods_btn1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="确 认"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/shape_goods_btn2"/>

    </LinearLayout>


</LinearLayout>