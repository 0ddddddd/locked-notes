<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="95dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/payment_button_shape">
        <TextView
            android:layout_width="345dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:text="订单"
            android:textSize="14sp"
            android:textColor="#000"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9fa1a0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/layout_setting_unpay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ipole_icon_wait_payment"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待付款"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_setting_paid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ipole_icon_finish_payment"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付款"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
