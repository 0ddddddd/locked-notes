<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.localworld.ishop.common.image.ISImageView
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/image_user"
        app:roundAsCircle="true" />

    <LinearLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commend_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="滚滚长江东逝水xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textSize="10sp"
            android:textColor="#000000"/>

        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/new_goods_commend_image"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/commend_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贝多芬"
                android:textColor="#979797"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/commend_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="发表自：3天前"
                android:textColor="#979797"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_38_3" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="1000"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_58_2" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="1"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/btn_reply"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:background="@drawable/icon_49" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="1000000"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reply_hole_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_top"
        android:layout_marginTop="5dp"
        android:background="#f4f4f4"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="69dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:text="添加公开回复..."
                android:textColor="#000000"
                android:textSize="10dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/reply_user"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_msg_p1"
                />

            <EditText
                android:id="@+id/edit_reply_content"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/reply_user"
                android:gravity="top"
                android:typeface="sans"
                android:textColor="#979797"
                android:textSize="12sp"
                android:background="@null"
                android:textCursorDrawable="@null"/>
            <TextView
                android:id="@+id/btn_publish"
                android:layout_width="68dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="20dp"

                android:text="发 表"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@drawable/shape_goods_btn4" />

        </RelativeLayout>


    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_below="@+id/reply_hole_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="——  查看回复(1000000)"
                android:textColor="#979797"
                android:textSize="10sp" />
        </RelativeLayout>


</RelativeLayout>