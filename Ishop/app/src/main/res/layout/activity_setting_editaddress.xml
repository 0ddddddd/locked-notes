<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_setting_editaddress_back"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:src="@drawable/ipole_icon_main_back_btn"
            android:layout_marginLeft="19dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑地址"
            android:textColor="#000"
            android:textSize="17sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_setting_edieaddress_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="#000"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginRight="19dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12.5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="收货人"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/edit_setting_editaddress_receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12.5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="账号"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/edit_setting_editaddress_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="110"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12.5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="手机"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/edit_setting_editaddress_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="110"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:inputType="phone"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12.5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="国家"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/edit_setting_editaddress_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="110"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12.5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="区域"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/edit_setting_editaddress_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="110"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12.5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="详细地址"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/edit_setting_editaddress_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="110"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/iv_setting_editaddress_nochoose"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ipole_icon_38"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/iv_setting_editaddress_choose"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ipole_icon_4"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:textColor="#4D4D4D"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_setting_deleteaddress"
            android:layout_width="143dp"
            android:layout_height="31dp"
            android:text="删除地址"
            android:textSize="15sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/setting_btn_round_red_shape2"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>
    </LinearLayout>
</LinearLayout>