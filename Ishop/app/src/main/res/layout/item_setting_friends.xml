<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="145dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/payment_button_shape">
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="朋友"
                android:textSize="14sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_setting_openall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#fff"
                android:text="展开全部"
                android:textSize="13sp"
                android:layout_marginLeft="230dp"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9fa1a0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/payment_button_shape"
                android:layout_marginRight="2dp">
                <com.localworld.ishop.common.image.ISImageView
                    android:id="@+id/iv_setting_friendspic1"
                    app:roundAsCircle="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_setting_main"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tv_setting_friendsname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beethoven"
                    android:textAllCaps="false"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"/>
                <Button
                    android:id="@+id/btn_setting_call1"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    android:background="@drawable/payment_button_shape_4"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/payment_button_shape"
                android:layout_marginRight="2dp">
                <com.localworld.ishop.common.image.ISImageView
                    android:id="@+id/iv_setting_friendspic2"
                    app:roundAsCircle="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_setting_main"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tv_setting_friendsname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beethoven"
                    android:textAllCaps="false"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"/>
                <Button
                    android:id="@+id/btn_setting_call2"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    android:background="@drawable/payment_button_shape_4"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/payment_button_shape"
                android:layout_marginRight="2dp">
                <com.localworld.ishop.common.image.ISImageView
                    android:id="@+id/iv_setting_friendspic3"
                    app:roundAsCircle="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_setting_main"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tv_setting_friendsname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beethoven"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="7sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"/>
                <Button
                    android:id="@+id/btn_setting_call3"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    android:background="@drawable/payment_button_shape_4"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/payment_button_shape"
                android:layout_marginRight="2dp">
                <com.localworld.ishop.common.image.ISImageView
                    android:id="@+id/iv_setting_friendspic4"
                    app:roundAsCircle="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_setting_main"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tv_setting_friendsname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beethoven"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="7sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"/>
                <Button
                    android:id="@+id/btn_setting_call4"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    android:background="@drawable/payment_button_shape_4"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
