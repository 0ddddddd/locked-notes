<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_setting_myhomepage_add_back"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:src="@drawable/ipole_icon_main_back_btn"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="270dp"/>
            <TextView
                android:id="@+id/tv_setting_myhomepage_add_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发表"
                android:textColor="#000"
                android:textSize="17sp"
                android:gravity="end"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/iv_setting_myhomepage_add_show"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_setting_myhomepage_add_add"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/ic_setting_myhomepage_add2"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_setting_myhomepage_add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入文字__"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>