<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginBottom="10dp">
        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/iv_setting_unpay_goodpic"
            android:layout_width="51dp"
            android:layout_height="51dp"
            apps:roundedCornerRadius="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="1dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_setting_unpay_goodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="琴谱"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/tv_setting_unpay_goodinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑色（签名版）"
                android:textColor="#979797"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="1dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#000000"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_setting_unpay_goodprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="#000000"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="#979797"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_setting_unpay_goodnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="#979797"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="345dp"
        android:layout_height="1dp"
        android:background="#dcdddd"/>
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_setting_unpay_totalprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="900"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_setting_unpay_more"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:background="@drawable/payment_button_shape"
            android:text="更多"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#979797"/>
        <TextView
            android:id="@+id/tv_setting_unpay_canclepay"
            android:layout_width="73dp"
            android:layout_height="24dp"
            android:background="@drawable/payment_button_shape"
            android:text="取消付款"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#979797"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_setting_unpay_pay"
            android:layout_width="63dp"
            android:layout_height="24dp"
            android:background="@drawable/payment_button_shape_4"
            android:text="付款"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdddd"/>
</LinearLayout>