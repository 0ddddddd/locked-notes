<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.localworld.ishop.common.image.ISImageView
        android:id="@+id/iv_discovery_popularity"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp" />


    <com.localworld.ishop.common.image.ISImageView
        android:id="@+id/iv_discovery_popularity_author"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:roundAsCircle="true"/>


    <TextView
        android:id="@+id/tv_discovery_popularity_authorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="18dp"
        android:text="Ludwig van Beethoven"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/iv_discovery_popularity_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/iv_discovery_popularity_author"
        android:layout_marginLeft="310dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_more" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_discovery_popularity_author"
        android:layout_below="@+id/tv_discovery_popularity_authorname"
        android:layout_marginLeft="90dp"
        android:text="非洲"
        android:textColor="#979797"
        android:textSize="11sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_discovery_popularity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="1325次赞"
                android:textColor="#979797"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_discovery_popularity_collect"
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_collect" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="大 江 东 去 浪 淘 尽..."
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:textColor="#979797"
            android:text="共377条评论"
            android:textSize="10sp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorLightGray" />

</RelativeLayout>
