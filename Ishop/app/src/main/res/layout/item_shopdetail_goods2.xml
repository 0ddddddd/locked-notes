<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/shopgoods2_user_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/image_user"
            app:roundAsCircle="true"/>

        <TextView
            android:id="@+id/shop_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:text="Ludwig van Beethoven"
            android:textColor="#000"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_52"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.localworld.ishop.common.image.ISImageView
        android:id="@+id/iv_shopdetail_good2_item"
        android:layout_width="360dp"
        android:layout_height="330dp"
        fresco:actualImageScaleType="centerCrop" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">
        <LinearLayout
            android:id="@+id/middlelinear"
            android:layout_width="180dp"
            android:layout_height="20dp">

            <LinearLayout
                android:id="@+id/btn_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_38_3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_58_2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_third"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_49"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/good_collect_click"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/good_collect"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_03_3" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="1000"
            android:textSize="12sp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="12sp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="1000000"
            android:textSize="12sp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_text_content"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="大 江 东 去 浪 淘 尽 滚 滚 长 江 东 逝 水
        大 江 东 去 浪 淘 尽 滚 滚 长 江 东 逝 水
        大 江 东 去 浪 淘 尽 滚 滚 长 江 东 逝 水"
        android:textSize="12sp"
        android:textColor="#000"
        android:singleLine="true"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_text_show"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="展开"
        android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/shop_publish_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1天前"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

</LinearLayout>
