<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">
     <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="27dp"
        android:gravity="center">
        <TextView
            android:id="@+id/logistik_data"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="12-24"
            android:textSize="15sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/logistik_time"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18:33"
            android:textSize="12sp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/pyament_local"/>
        <View
            android:id="@+id/logistik_view"
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9fa1a0">
        </View>
    </LinearLayout>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logistik_status"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="已签收"
                android:textColor="#000"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/logistik_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="您已在浙江工商大学钱江湾生活园区40幢外菜鸟完成取件。"/>
        </LinearLayout>
</LinearLayout>
