<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_setting_personinfo_back"
        android:layout_width="9dp"
        android:layout_height="15dp"
        android:src="@drawable/ipole_icon_main_back_btn"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <com.localworld.ishop.common.image.ISImageView
                android:id="@+id/iv_setting_exchangeheadpic"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_setting_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="昵称"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="贝多芬"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="账号"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_accountnumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="U007"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="性别"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="男"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="个人简介"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_personintroduce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="我是贝多芬"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="地区"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="德国柏林"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="私人信息"
                android:textColor="#4D4D4D"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="邮箱"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="110"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="手机"
                        android:textColor="#4D4D4D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tv_setting_phonenumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:text="12345678901"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <TextView
                android:layout_width="245dp"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:id="@+id/layout_setting_myaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:text="我的地址"
                    android:textColor="#4D4D4D" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:duplicateParentState="true"
                    android:gravity="end"
                    android:rotation="180"
                    android:src="@drawable/icon_back" />
            </LinearLayout>

            <TextView
                android:layout_width="245dp"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <TextView
                android:id="@+id/tv_setting_exitaccount"
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/setting_btn_round_shape2"
                android:gravity="center"
                android:text="退出账号"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>