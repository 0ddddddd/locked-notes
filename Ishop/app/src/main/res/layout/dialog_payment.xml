<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/ipole_allradius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="使用P点购买"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P点数:"
                android:textSize="14sp"
                android:textColor="#979797"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#ff0000"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1P=1RMB)"
                android:textSize="14sp"
                android:textColor="#979797"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_payment_dialog_all"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="41dp"
                android:src="@drawable/ipole_icon_38"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部使用P点支付"
                android:textSize="12sp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(P点不足)"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_payment_dialog_part"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="41dp"
                android:src="@drawable/ipole_icon_38"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用部分P点支付"
                android:textSize="12sp"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:id="@+id/iv_payment_dialog_sub"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ipole_icon_8"/>

            <TextView
                android:id="@+id/tv_payment_dialog_num"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:background="@drawable/ipole_allradius_gray"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/iv_payment_dialog_add"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ipole_icon_10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_payment_dialog_confirm"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="确认"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/ipole_allradius_red"/>


    </LinearLayout>

</LinearLayout>