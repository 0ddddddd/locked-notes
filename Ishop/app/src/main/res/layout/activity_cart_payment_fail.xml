<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.localworld.ishop.cart.PaymentSuccessActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_cart_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_cart_payment_fail_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_toolbar_back"
                android:layout_gravity="center"
                android:layout_marginLeft="19dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="付款结果"
                android:textColor="#000"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="44dp"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_marginTop="74dp"
        android:layout_marginBottom="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ipole_icon_27"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="购买失败"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cart_payment_fail_again"
            android:layout_width="102dp"
            android:layout_height="31dp"
            android:text="重新购买"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:background="@drawable/setting_btn_round_red_shape2"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/tv_cart_payment_fail_return_home"
            android:layout_width="102dp"
            android:layout_height="31dp"
            android:text="返回首页"
            android:textSize="12sp"
            android:background="@drawable/payment_button_shape"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cart_payment_fail_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付遇到困难？"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="47dp">
        <View
            android:layout_width="79dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:text="更多推荐"
            android:textSize="10sp"
            android:textColor="#000"/>
        <View
            android:layout_width="79dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="28dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/payment_fail_img_1"
            android:layout_width="112dp"
            android:layout_height="112dp"
            />
        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/payment_fail_img_2"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/payment_fail_img_3"
            android:layout_width="112dp"
            android:layout_height="112dp"
            />

        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/payment_fail_img_4"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

</LinearLayout>
