<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:orientation="vertical"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/ipole_allradius">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="会员卡"
            android:textColor="#000"
            android:textSize="15sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="开通会员  可获得更多P点"
            android:textSize="14sp"
            android:textColor="#000"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="false"
            android:text="非会员用户购买1RMB可获得1P点\n开通会员可xxxxxxxxxxxxxx"
            android:textSize="12sp"
            android:textColor="#979797"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/goods_buy_vip_open"
                android:layout_width="102dp"
                android:layout_height="31dp"
                android:text="开通会员"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="45dp"
                android:background="@drawable/ipole_allradius_red"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/goods_buy_vip_continue"
                android:layout_width="102dp"
                android:layout_height="31dp"
                android:text="继续购买"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/ipole_allradius_blue"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>