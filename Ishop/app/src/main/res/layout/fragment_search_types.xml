<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:id="@+id/title_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp">
            <Button
                android:id="@+id/btn_search_back"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ipole_icon_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimaryBlack"
                android:textSize="18sp"
                android:text="类别搜索"/>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_SearchFragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#797979"
        app:tabSelectedTextColor="#000"
        app:tabMinWidth="120dp"
        app:tabMode="scrollable"
        android:background="#fff" >
    </android.support.design.widget.TabLayout>
    <View
        android:layout_below="@+id/title_search"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dcdddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_SearchFragment_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

</LinearLayout>