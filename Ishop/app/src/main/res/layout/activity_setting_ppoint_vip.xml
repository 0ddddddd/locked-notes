<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_setting_vipbacktomian"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:src="@drawable/ipole_icon_main_back_btn"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="会员"
            android:textColor="#000"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_setting_vipcard"
        android:layout_width="255dp"
        android:layout_height="154dp"
        android:background="@drawable/ic_setting_vip_1"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P点:"
                android:textSize="13sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_setting_ppoint_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至"
                android:textColor="#000000"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_setting_ppoint_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2008"
                android:textColor="#000000"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#000000"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_setting_ppoint_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#000000"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#000000"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_setting_ppoint_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#000000"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_setting_novipcard"
        android:layout_width="255dp"
        android:layout_height="154dp"
        android:background="@drawable/ic_setting_vip_2"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P点:"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@id/tv_setting_ppoint_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_setting_ppoint_becamevip"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:text="已开通会员"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/payment_button_shape_4"
        android:gravity="center"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_setting_ppoint_becomevip"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:text="开通会员"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/setting_btn_round_red_shape2"
        android:gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员"
            android:textSize="12sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_setting_ppoint_vipname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泼猴哪里走"
            android:textColor="#000000"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :"
            android:textSize="12sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="........"/>
</LinearLayout>