<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_view_home_goods_item"
    android:layout_width="170dp"
    android:layout_height="205dp"
    android:layout_marginTop="12.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="10dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.localworld.ishop.common.image.ISImageView
            android:id="@+id/iv_view_home_goods_item"
            android:layout_width="170dp"
            android:layout_height="163dp"
            fresco:actualImageScaleType="centerCrop"
        />

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_view_home_authorhead"
                android:layout_width="27.5dp"
                android:layout_height="27.5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_headportrait2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_view_home_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_view_home_mutualfriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#979797"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
