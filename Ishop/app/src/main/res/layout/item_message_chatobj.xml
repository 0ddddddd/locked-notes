<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="10sp"
        android:textColor="#979797"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_message_left"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/iv_message_chatobj"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_msg_p1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/message_corners"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message_chatobj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="#000"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl_message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_gray"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="asdkasdhaksdansdjsadk"
            android:textColor="#000"/>
    </LinearLayout>


