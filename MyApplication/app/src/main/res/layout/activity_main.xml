<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.qiangqiang.ldnotebookapplication.MainActivity">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/toolbar_main"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/id_drawerlayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_toolbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_framelayout_main">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="135dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/add_note" />
        </FrameLayout>

        <ListView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:id="@+id/id_listview_navi"
            android:layout_gravity="start"
            android:background="#dddddd"
            android:divider="@color/navi_divider"
            android:dividerHeight="0dp">
        </ListView>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
