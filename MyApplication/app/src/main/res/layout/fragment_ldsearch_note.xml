<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qiangqiang.ldnotebookapplication.LDSearchNoteFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/id_edittext_search_title"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:inputType="text" />


    <Button
        android:id="@+id/id_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/searchNote" />

    <ListView
        android:layout_below="@id/id_edittext_search_title"
        android:id="@+id/id_listview_found_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
